@model Online_Commercial_Authomation.Models.Classes.Category
@{
    ViewBag.Title = "CategoryAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />
<h2>NEW CATEGORY PAGE</h2>
<br />

<form class="form-group" method="post"> 
    @Html.LabelFor(x=>x.CategoryName)
    @Html.TextBoxFor(x=>x.CategoryName, new {@class = "form-control" })
    <br />
    <button class="btn btn-warning" id="Btn1">SAVE</button>
    <script>
        $('#Btn1').click(function () {
            alert("Category added succesfully")
        });

    </script>
</form>

