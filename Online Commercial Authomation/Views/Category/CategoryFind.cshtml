@model Online_Commercial_Authomation.Models.Classes.Category
@{
    ViewBag.Title = "CategoryFind";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Category Update</h2>
<br />

@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
 {
     <div class="form-group">

          @Html.LabelFor(x=>x.CategoryName)
          @Html.TextBoxFor(x=>x.CategoryName, new { @class = "form-control" })
         @Html.HiddenFor(x => x.CategoryId, new { @class = "form-control" })

     </div>

     <button class="btn btn-warning" >UPDATE</button>
 }