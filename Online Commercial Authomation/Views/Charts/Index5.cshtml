
@{
    ViewBag.Title = "Index5";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>

<html lang="en">
<br />
<h2>"Product- Stock Charts"</h2>
<head>

    <title>Result Visualization</title>

    <script type="text/javascript" src="https://www.google.com/jsapi"></script>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script>

        $(document).ready(function () {

            $.ajax({

                type: "POST",

                dataType: "json",

                contentType: "application/json",

                url: '@Url.Action("VisualizeProductResult2", "Charts")',

                success: function (result) {

                    google.charts.load('current', {

                        'packages': ['corechart']

                    });

                    google.charts.setOnLoadCallback(function () {

                        drawChart(result);

                    });

                }

            });

        });



        function drawChart(result) {

            var data = new google.visualization.DataTable();

            data.addColumn('string', 'Name');

            data.addColumn('number', 'Stock');

            var dataArray = [];



            $.each(result, function (i, obj) {

                dataArray.push([obj.prdt, obj.stck]);

            });

            data.addRows(dataArray);



            var columnChartOptions = {

                width: 1200,

                height: 800,

                bar: { groupWidth: "20%" },

            };



            var columnChart = new google.visualization.LineChart(document.getElementById('linechart_div'));
            columnChart.draw(data, columnChartOptions);

        }

    </script>

</head>

<body>

    <div id="linechart_div"></div>

</body>

</html>
