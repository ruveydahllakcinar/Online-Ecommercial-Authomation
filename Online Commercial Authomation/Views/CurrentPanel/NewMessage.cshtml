@model Online_Commercial_Authomation.Models.Classes.Message
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_CurrentLayout.cshtml";
}

<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>AdminLTE 3 | Compose Message</title>

    <!-- Tell the browser to be responsive to screen width -->

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->

    <link rel="stylesheet" href="~/Admin/plugins/fontawesome-free/css/all.min.css">

    <!-- Ionicons -->

    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- Theme style -->

    <link rel="stylesheet" href="~/Admin/dist/css/adminlte.min.css">

    <!-- summernote -->

    <link rel="stylesheet" href="~/Admin/plugins/summernote/summernote-bs4.css">

    <!-- Google Font: Source Sans Pro -->

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>

<body class="hold-transition sidebar-mini">


    <!-- Content Header (Page header) -->

    <section class="content-header">

        <div class="container-fluid">

            <div class="row mb-2">

                <div class="col-sm-6">

                    <h1> Create New Message</h1>

                </div>



            </div>

        </div><!-- /.container-fluid -->

    </section>

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-3">

                    <a href="compose.html" class="btn bg-default btn-block mb-3" style="background-color: #c56cf0; color: black;"><b>Create Message</b></a>

                    <div class="card">

                        <div class="card-header">

                            <h3 class="card-title">Folders</h3>

                            <div class="card-tools">

                                <button type="button" class="btn btn-tool" data-card-widget="collapse">

                                    <i class="fas fa-minus"></i>

                                </button>

                            </div>

                        </div>

                        <div class="card-body p-0">

                            <ul class="nav nav-pills flex-column">

                                <li class="nav-item active">

                                    <a href="/CurrentPanel/IncomingMessage" class="nav-link">

                                        <i class="fas fa-inbox"></i> Inbox

                                        <span class="badge bg-default float-right" style="background-color: #10ac84; color:black;"> @ViewBag.inbox</span>


                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="/CurrentPanel/SentMessage" class="nav-link">

                                        <i class="far fa-envelope"></i> Sent
                                        <span class="badge bg-default float-right" style="background-color: #ff6b6b; color: black;">@ViewBag.sent</span>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-file-alt"></i> Drafts
                                        <span class="badge bg-default float-right" style="background-color: #7d5fff; color: black;">3</span>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="fas fa-filter"></i> Junk

                                        <span class="badge bg-default float-right" style="background-color: #fff200; color:black; ">3</span>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-trash-alt"></i> Trash
                                        <span class="badge bg-default float-right" style="background-color: #ffb8b8; color: black; ">3</span>

                                    </a>

                                </li>

                            </ul>

                        </div>

                        <!-- /.card-body -->

                    </div>

                    <!-- /.card -->

                    <div class="card">

                        <div class="card-header">

                            <h3 class="card-title">Labels</h3>

                            <div class="card-tools">

                                <button type="button" class="btn btn-tool" data-card-widget="collapse">

                                    <i class="fas fa-minus"></i>

                                </button>

                            </div>

                        </div>

                        <div class="card-body p-0">

                            <ul class="nav nav-pills flex-column">

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-circle text-danger"></i>

                                        Important

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-circle text-warning"></i> Promotions

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-circle text-primary"></i>

                                        Social Media Message

                                    </a>

                                </li>

                            </ul>

                        </div>

                        <!-- /.card-body -->

                    </div>

                    <!-- /.card -->

                </div>


                <!-- /.col -->

                <div class="col-md-9">

                    <div class="card card-primary card-outline">

                        <div class="card-header">

                            <h3 class="card-title">Compose New Message</h3>

                        </div>

                        <!-- /.card-header -->
                        <form class="form-group" method="post">
                            <div class="card-body">

                                <div class="form-group">

                                    <input class="form-control" name="Buyer" placeholder="To:">

                                </div>

                                <div class="form-group">

                                    <input class="form-control" name="Subject" placeholder="Subject:">

                                </div>

                                <div class="form-group">

                                    <textarea id="compose-textarea" name="Contents" class="form-control" style="height: 300px"> </textarea>

                                </div>
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Send</button>

                            </div>
                        </form>

                        <!-- /.card-body -->

                        <div class="card-footer">

                            <div class="float-right">

                                <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Draft</button>

                            </div>

                            <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Discard</button>

                        </div>

                        <!-- /.card-footer -->

                    </div>

                    <!-- /.card -->

                </div>

                <!-- /.col -->

            </div>

            <!-- /.row -->

        </div><!-- /.container-fluid -->

    </section>

    <!-- /.content -->
    <!-- ./wrapper -->
    <!-- jQuery -->

    <script src="~/Admin/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap 4 -->

    <script src="~/Admin/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- AdminLTE App -->

    <script src="~/Admin/dist/js/adminlte.min.js"></script>

    <!-- AdminLTE for demo purposes -->

    <script src="~/Admin/dist/js/demo.js"></script>

    <!-- Summernote -->

    <script src="~/Admin/plugins/summernote/summernote-bs4.min.js"></script>

    <!-- Page Script -->

    <script>
        $(function () {

            //Add text editor

            $('#compose-textarea').summernote()

        })</script>

</body>

</html>

