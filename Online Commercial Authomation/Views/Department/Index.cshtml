@using Online_Commercial_Authomation.Models.Classes
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>DEPARTMENT NAME</th>
        <th>DELETE</th>
        <th>UPDATE</th>
        <th>DETAIL</th>
    </tr>

    @foreach (var department in Model)
    {
        <tr>
            <td>@department.DepartmentId</td>
            <td>@department.DepartmentName</td>
            <td><a href="/Department/DepartmentDelete/@department.DepartmentId" class="btn btn-danger">DELETE</a></td>
            <td><a href="/Department/DepartmentFind/@department.DepartmentId" class="btn btn-info">UPDATE</a></td>
            <td><a href="/Department/DepartmentDetail/@department.DepartmentId" class="btn btn-default" style="background-color:lightcoral; color:white;    ">DETAIL</a></td>

        </tr>
    }

</table>

<a href="/Department/DepartmentAdd" class="btn btn-success"><b>ADD NEW DEPARTMENT</b></a>



