@model Online_Commercial_Authomation.Models.Classes.InvoiceItem
@{
    ViewBag.Title = "NewItem";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>NEW INVOICE ITEM ENTRY</h2>
<br />


<form class="form-group" method="post">
    @Html.LabelFor(x => x.Explanation)
    @Html.TextBoxFor(x => x.Explanation, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Quantity)
    @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.UnitPrice)
    @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Amount)
    @Html.TextBoxFor(x => x.Amount, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.InvoicesId)
    @Html.TextBoxFor(x => x.InvoicesId, new { @class = "form-control" })
    <br />

    <button class="btn btn-warning">SAVE</button>
</form>

