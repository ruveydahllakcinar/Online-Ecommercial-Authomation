@model Online_Commercial_Authomation.Models.Classes.SaleMove
@{
    ViewBag.Title = "MakeSale";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Make A Sale</h2>
<br />


<form class="form-group" method="post">
    @Html.LabelFor(x => x.ProductsId)
    <input type="text" name="ProductsId" value="@ViewBag.vl2" class="form-control" readonly />
    <br />
    @Html.LabelFor(x => x.EmployeeId)
    @Html.DropDownListFor(x => x.EmployeeId, (List<SelectListItem>)ViewBag.vl1, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CurrentId)
    @Html.TextBoxFor(x => x.CurrentId, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Number)
    <input type="number" class="form-control" name="Number" max="50" min="0" placeholder="Enter number" id="txt1" onchange="sum();" />
    <br />
    @Html.LabelFor(x => x.Price)
    <input type="text" name="Price" value="@ViewBag.vl3" class="form-control" id="txt2" onkeyup="sum();" />

    <br />
    @Html.LabelFor(x => x.TotalAmount)
    <input type="text" name="TotalAmount" value="0" class="form-control" id="txt3" readonly/>
    <br />

    <button class="btn btn-warning">MAKE A SALE</button>
</form>

<script>
    function sum() {
        var number1 = document.getElementById('txt1').value;
        var number2 = document.getElementById('txt2').value;
        var query = parseInt(number1) * parseInt(number2);
        if (!isNaN(query)) {
            document.getElementById('txt3').value = query;
        }
    }
</script>