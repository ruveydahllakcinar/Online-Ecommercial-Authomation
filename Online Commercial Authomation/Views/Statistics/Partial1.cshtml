@model IEnumerable<Online_Commercial_Authomation.Models.Classes.GroupClass2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Department Employee Numbers</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Department</th>
                    <th>Progress</th>
                    <th style="width: 40px">Number</th>
                </tr>
            </thead>
            <tbody>
                @{ int orderno = 0;}
                @foreach (var groupdetail in Model)
                {


                    <tr>
                        <td>@{orderno++;} @orderno</td>
                        <td>@groupdetail.Department</td>
                        <td>
                            @if (groupdetail.Number == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-primary" style="width: 55%"></div>
                                </div>
                            }
                            @if (groupdetail.Number == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 75%"></div>
                                </div>
                            }
                            @if (groupdetail.Number == 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-gradient-success" style="width: 55%"></div>
                                </div>
                            }
                            @if (groupdetail.Number == 4)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-gradient-pink" style="width: 55%"></div>
                                </div>
                            }


                        </td>
                        <td>
                            @if (groupdetail.Number == 1)
                            {
                            <span class="badge bg-primary">@groupdetail.Number</span>
                            }
                            @if (groupdetail.Number == 2)
                            {
                                <span class="badge bg-warning">@groupdetail.Number</span>
                            }
                            @if (groupdetail.Number == 3)
                            {
                                <span class="badge bg-success">@groupdetail.Number</span>
                            }
                            @if (groupdetail.Number == 4)
                            {
                                <span class="badge bg-pink">@groupdetail.Number</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->